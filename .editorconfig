# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = false

[*.md]
# It's common to keep trailing whitespace in Markdown for line breaks
trim_trailing_whitespace = false

[*.mdx]
# Same as Markdown
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.json]
indent_size = 2
